<HBox prefHeight="503.0" prefWidth="854.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.account_statementController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="280.0" style="-fx-background-color: #002436;">
         <children>
            <Button fx:id="btnMenuDeposit" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openDepositWindow" style="-fx-background-color: #000E21;" text="Depositar" textFill="#f2efef">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnMenuWithdraw" layoutX="10.0" layoutY="10.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openWithdrawWindow" style="-fx-background-color: #000E21;" text="Retirar" textFill="#f2efef">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnMenuTransfer" layoutX="10.0" layoutY="49.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openTransferWindow" style="-fx-background-color: #000E21;" text="Transferir" textFill="#f2efef">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnAccountStatement" layoutX="30.0" layoutY="282.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#openAccountStatementWindow" style="-fx-background-color: #000E21;" text="Estado de cuenta" textFill="#f2efef">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="btnLogout" layoutX="10.0" layoutY="88.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#logout" style="-fx-background-color: #000E21;" text="Cerrar sesion" textFill="#f2efef">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="680.0" HBox.hgrow="ALWAYS">
         <children>
            <Label style="-fx-font-weight: bolder;" text="TU ESTADO DE CUENTA">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="30.0" />
               </VBox.margin>
            </Label>
            <Label text="TITULAR DE LA CUENTA">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="txtAccountHolder" style="-fx-border-width: 0;">
               <VBox.margin>
                  <Insets bottom="40.0" left="80.0" right="80.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <Label text="NUMERO DE CUENTA">
               <font>
                  <Font size="19.0" />
               </font>
            </Label>
            <TextField fx:id="txtAccountNumber" style="-fx-border-width: 0;">
               <VBox.margin>
                  <Insets bottom="40.0" left="80.0" right="80.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <Label text="SALDO DISPONIBLE">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="txtBankAccount" style="-fx-border-width: 0;">
               <font>
                  <Font size="18.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="40.0" left="80.0" right="80.0" />
               </VBox.margin>
            </TextField>
            <Label fx:id="lblError">
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </Label>
         </children>
      </VBox>
   </children>
</HBox>
